{
    "version": "2.0.0",
    "runner": "terminal",
    "type": "shell",
    "echoCommand": true,
    "presentation": {
        "reveal": "always"
    },
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build C",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "Build C++",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Execute C",
            "command": "${fileDirname}/${fileBasenameNoExtension}",
            "type": "shell",
            "dependsOn": "Build C"
        },
        {
            "label": "Execute C++",
            "command": "${fileDirname}/${fileBasenameNoExtension}",
            "type": "shell",
            "dependsOn": "Build C++"
        },
        {
            "label": "Build, Execute, Delete C",
            "command": "rm",
            "group": "build",
            "args": ["${fileDirname}/${fileBasenameNoExtension}"],
            "dependsOn": ["Execute C"],
            "detail": "빌드, 실행 후 실행파일 삭제"
        },
        {
            "label": "Build, Execute, Delete C++",
            "command": "rm",
            "group": "build", 
            "args": ["${fileDirname}/${fileBasenameNoExtension}"],
            "dependsOn": ["Execute C++"],
            "detail": "빌드, 실행 후 실행파일 삭제"
        },
        {
            "label": "Cleaner",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "rm -f *.exe *.s *.o && find . -maxdepth 1 -type f -executable ! -name '*.sh' ! -name '.*' -delete"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "detail": "빌드 파일들과 실행파일들 삭제",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        }
    ]
}